<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prithwishmukherjee.duvidha.DoctorReview"
    android:background="#ffd5d5d5"
    android:id="@+id/yyy">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/goBackReview"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review1"
        android:layout_below="@+id/goBackReview"
        android:layout_alignParentStart="true"
        android:background="#ffd5d5d5"
        android:layout_marginTop="50dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review2"
        android:background="#ffd5d5d5"
        android:layout_below="@+id/review1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review3"
        android:background="#ffd5d5d5"
        android:layout_below="@+id/review2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review4"
        android:background="#ffd5d5d5"
        android:layout_below="@+id/review3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review5"
        android:background="#ffd5d5d5"
        android:layout_below="@+id/review4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />
</RelativeLayout>
