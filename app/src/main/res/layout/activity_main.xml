<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffd5d5d5"
    android:id="@+id/u"
    android:longClickable="false">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff4d2d34"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:gravity="left"
        android:id="@+id/u1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userId"
        android:enabled="true"
        android:editable="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/u1"
        android:layout_marginTop="30dp"
        android:hint="Username"
        android:textSize="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/userId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:hint="password"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as Guest"
        android:id="@+id/textView5"
        android:textSize="25dp"
        android:background="#ffd5d5d5"
        android:clickable="true"
        android:textColor="#ff90372b"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:clickable="true"
        android:onClick="gotoRegistrationPage"
        android:background="#ffd5d5d5"
        android:textColor="#ff90372b"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/emergency3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="35dp"
        android:longClickable="true"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/textView8"
        android:clickable="true"
        android:onClick="gotoMemberPage"
        android:background="#ffd5d5d5"
        android:textSize="25dp"
        android:textColor="#ff100202"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true" />

</RelativeLayout>
