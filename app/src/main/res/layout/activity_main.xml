<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff91eae7"
    android:id="@+id/u"
    android:longClickable="false">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffb052"
        android:textSize="@android:dimen/notification_large_icon_width"
        android:gravity="center"
        android:id="@+id/u1"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter id:"
        android:id="@+id/textView"
        android:layout_below="@+id/u1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="false"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userId"
        android:enabled="true"
        android:editable="true"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as Guest"
        android:id="@+id/textView5"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:background="#ffffffff"
        android:clickable="true"
        android:textColor="#ffff604a"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_alignTop="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/textView6"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="#ffffffff"
        android:textColor="#ffff604a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or"
        android:id="@+id/textView7"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="70dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/emergency2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="35dp"
        android:longClickable="true"
        android:onClick="gotoEmergencyPage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/textView8"
        android:clickable="true"
        android:onClick="gotoMemberPage"
        android:background="#ffffffff"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textColor="#ffff2828"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
