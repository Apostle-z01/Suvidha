<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prithwishmukherjee.duvidha.CheckAppointmentStatus"
    android:id="@+id/cc1"
    android:background="#ffd5d5d5">

    <TextView android:text="Your appointments are:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textViewmm" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/stline2" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:id="@+id/appointmentTable2"
        android:stretchColumns="0"
        android:divider="#ffffffff"
        android:layout_alignTop="@+id/stline"
        android:layout_marginTop="20dp">
    </TableLayout>

</RelativeLayout>
